<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Layout" />

    <style name="Layout.Wrapped" parent="Layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Layout.Wrapped.Weight1" parent="Layout.Wrapped">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Layout.MatchX1" parent="Layout.MatchX">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Layout.MatchY1" parent="Layout.MatchY">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Layout.MatchX1.Vertical" parent="Layout.MatchX1">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Layout.MatchY1.Horizontal" parent="Layout.MatchY1">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Layout.Wrapped.Vertical" parent="Layout.Wrapped">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Layout.Wrapped.Horizontal" parent="Layout.Wrapped">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Layout.MatchXY" parent="Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Layout.MatchY" parent="Layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Layout.MatchY.Vertical" parent="Layout.MatchY">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Layout.MatchY.Horizontal" parent="Layout.MatchY">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Layout.MatchX" parent="Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Layout.MatchX.Vertical" parent="Layout.MatchX">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Layout.MatchX.Horizontal" parent="Layout.MatchX">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Layout.MatchXY.Vertical" parent="Layout.MatchXY">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Layout.MatchXY.Horizontal" parent="Layout.MatchXY">
        <item name="android:orientation">horizontal</item>
    </style>
</resources>