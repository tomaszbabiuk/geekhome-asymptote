<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="triggers_icon_sice">65dp</dimen>

    <style name="Triggers" />

    <style name="Triggers.Icon">
        <item name="android:layout_width">@dimen/triggers_icon_sice</item>
        <item name="android:layout_height">@dimen/triggers_icon_sice</item>
        <item name="svgColor">@color/almost_black</item>
    </style>

    <style name="Triggers.Switch" parent="Layout.MatchX">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="showText">false</item>
        <item name="trackTint">@color/silver</item>
        <item name="thumbTint">@color/orange</item>
    </style>

    <style name="Triggers.Label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="Triggers.Label.Centered">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="Triggers.Spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Triggers.PickButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">@dimen/common_small_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/orange_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/common_small_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>